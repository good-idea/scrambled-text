{
  "name": "scrambled-text",
  "version": "1.1.0",
  "description": "A simple utility for scrambling & unscrambling text. Includes a React hook",
  "repository": "https://github.com/good-idea/scrambled-text",
  "author": "Joseph Thomas | Good Idea <joseph@good-idea.studio>",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "react hook"
  ],
  "scripts": {
    "cm": "git-cz",
    "describe": "npm-scripts-info",
    "clean": "trash build test",
    "build": "yarn clean && rollup -c",
    "build:stats": "ANALYZE=1 yarn build",
    "build:watch": "yarn clean && rollup -cw",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "linky": "yalc publish",
    "linky:watch": "nodemon -w ./lib --delay 250ms -x yalc publish --push --changed",
    "test": "run-s test:lint test:compile test:coverage build",
    "test:lint": "tslint --project .",
    "test:compile": "tsc --noEmit",
    "test:jest": "jest",
    "test:coverage": "jest --collectCoverage",
    "test:watch": "jest --watch",
    "test:coverage:open": "yarn test:unit && opn coverage/lcov-report/index.html",
    "test:coverage:send": "codecov",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s all version doc:publish",
    "semantic-release": "semantic-release"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/prompt": "^12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/jest": "^26.0.21",
    "@types/lolex": "^5.1.0",
    "@types/node": "^14.14.35",
    "@types/prettier": "^2.2.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "17.0.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/semantic-release": "^17.2.0",
    "@types/testing-library__react": "^10.0.1",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lolex": "^5.1.2",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^5.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.42.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.2",
    "standard-version": "^9.1.1",
    "trash-cli": "^4.0.0",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typedoc": "^0.20.32",
    "typescript": "^4.2.3",
    "utility-types": "^3.10.0",
    "yalc": "^1.0.0-pre.50"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
